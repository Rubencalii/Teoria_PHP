{% extends 'base.html.twig' %}

{% block title %}Inicio | ZenPaw Tech{% endblock %}

{% block body %}
<h2 style="margin-bottom:2rem; color:#3a7bd5;">Artículos recientes</h2>
<section style="display: flex; flex-direction: column; gap: 2rem;">
    {% if posts|length == 0 %}
        <article class="card">
            <p>No hay artículos publicados todavía.</p>
        </article>
    {% else %}
        {% for post in posts %}
            <article style="background: #fff; border-radius: 1rem; box-shadow: 0 2px 12px #3a7bd522; padding: 1.5rem 2rem; transition: box-shadow 0.2s; border-left: 6px solid #3a7bd5;">
                <header style="margin-bottom: 0.5rem;">
                    <h3 style="margin:0; font-size:1.5rem;">
                        <a href="{{ path('app_blog_show', {slug: post.slug}) }}" style="color:#3a7bd5; text-decoration:none;">{{ post.title }}</a>
                    </h3>
                    <span style="font-size:0.95rem; color:#888;">{{ post.publishedAt|date('d M Y, H:i') }}</span>
                </header>
                <p style="font-size:1.1rem; color:#222; margin-bottom:0.5em;">{{ post.summary }}</p>
                <a href="{{ path('app_blog_show', {slug: post.slug}) }}" style="color:#00b894; font-weight:500;">Leer más &rarr;</a>
            </article>
        {% endfor %}
    {% endif %}
</section>
{% endblock %}
